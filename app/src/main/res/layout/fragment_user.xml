<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/bottom_layout_height" />

    <android.support.constraint.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/top_status_bar_height" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <ImageView
                android:id="@+id/headBlurImg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.1"
                android:src="@mipmap/logo_douyin"
                app:layout_constraintBottom_toTopOf="@+id/productionText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/headImg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:src="@mipmap/logo_douyin"
                app:civ_border_color="#fff"
                app:civ_border_width="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/moreImg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_gray_corner_5"
                android:src="@mipmap/ic_more"
                app:layout_constraintBottom_toBottomOf="@+id/headImg"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/headImg" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="用户名"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/headImg"
                app:layout_constraintRight_toRightOf="@+id/moreImg"
                app:layout_constraintTop_toBottomOf="@+id/headImg" />

            <TextView
                android:id="@+id/douyinCodeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="抖音号:123456789"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/nameText"
                app:layout_constraintRight_toRightOf="@+id/moreImg"
                app:layout_constraintTop_toBottomOf="@+id/nameText" />

            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#aaa"
                app:layout_constraintLeft_toLeftOf="@+id/headImg"
                app:layout_constraintRight_toRightOf="@+id/moreImg"
                app:layout_constraintTop_toBottomOf="@+id/douyinCodeText" />

            <TextView
                android:id="@+id/describeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="介绍"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/nameText"
                app:layout_constraintRight_toRightOf="@+id/moreImg"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <TextView
                android:id="@+id/ageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/half_circle_rect_pink"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="♂31岁"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/headImg"
                app:layout_constraintTop_toBottomOf="@+id/describeText" />

            <TextView
                android:id="@+id/cityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/half_circle_rect_purple"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="北京"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/ageText"
                app:layout_constraintLeft_toRightOf="@+id/ageText" />

            <TextView
                android:id="@+id/starText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/half_circle_rect_purple"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="天秤座"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/ageText"
                app:layout_constraintLeft_toRightOf="@+id/cityText" />

            <TextView
                android:id="@+id/likeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="199获赞"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/headImg"
                app:layout_constraintTop_toBottomOf="@+id/ageText" />

            <TextView
                android:id="@+id/focusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="19关注"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/likeText"
                app:layout_constraintLeft_toRightOf="@+id/likeText" />

            <TextView
                android:id="@+id/fansText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="1粉丝"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/likeText"
                app:layout_constraintLeft_toRightOf="@+id/focusText" />

            <TextView
                android:id="@+id/productionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#000"
                android:gravity="center"
                android:padding="5dp"
                android:text="作品45"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/favoriteText"
                app:layout_constraintTop_toBottomOf="@+id/likeText" />

            <TextView
                android:id="@+id/favoriteText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffee00"
                android:gravity="center"
                android:padding="5dp"
                android:text="喜欢45"
                android:textColor="#000"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/productionText"
                app:layout_constraintLeft_toRightOf="@+id/productionText"
                app:layout_constraintRight_toRightOf="parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/productionText" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>


    <ImageView
        android:id="@+id/backImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@mipmap/ic_back"
        app:layout_constraintTop_toTopOf="@+id/topGuideline" />

</android.support.constraint.ConstraintLayout>